@model JobApplication

@{
    ViewData["Title"] = "Edit Job Application";
}

<div class="container my-5">
    <h2 class="text-center text-dark mb-4">Edit Job Application</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post" class="row g-3">
                <!-- Hidden Input for ID -->
                <input type="hidden" asp-for="Id" />

                <!-- Company Name -->
                <div class="col-md-6">
                    <label asp-for="CompanyName" class="form-label text-dark">Company Name</label>
                    <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

                <!-- Job Title -->
                <div class="col-md-6">
                    <label asp-for="JobTitle" class="form-label text-dark">Job Title</label>
                    <input asp-for="JobTitle" class="form-control" placeholder="Enter job title" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>

                <!-- Application Date -->
                <div class="col-md-6">
                    <label asp-for="ApplicationDate" class="form-label text-dark">Application Date</label>
                    <input asp-for="ApplicationDate" class="form-control" type="date" />
                    <span asp-validation-for="ApplicationDate" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="col-md-6">
                    <label asp-for="Status" class="form-label text-dark">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option>Applied</option>
                        <option>Interviewing</option>
                        <option>Accepted</option>
                        <option>Rejected</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Job Posting Link -->
                <div class="col-md-12">
                    <label asp-for="JobLink" class="form-label text-dark">Job Posting Link</label>
                    <input asp-for="JobLink" class="form-control" placeholder="Enter job posting URL" />
                    <span asp-validation-for="JobLink" class="text-danger"></span>
                </div>

                <!-- Notes -->
                <div class="col-md-12">
                    <label asp-for="Notes" class="form-label text-dark">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Enter additional notes"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="col-md-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
