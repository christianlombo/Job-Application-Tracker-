@model dynamic

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container my-5">
    <h2 class="text-primary text-center mb-4">Dashboard</h2>

    <div class="row g-4 text-center">
        <!-- Total Applications -->
        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary">Total Applications</h5>
                    <p class="display-4 text-primary">@Model.TotalApplications</p>
                </div>
            </div>
        </div>

        <!-- Accepted Applications -->
        <div class="col-md-4">
            <div class="card shadow-sm border-success">
                <div class="card-body">
                    <h5 class="card-title text-success">Accepted</h5>
                    <p class="display-4 text-success">@Model.Accepted</p>
                </div>
            </div>
        </div>

        <!-- Rejected Applications -->
        <div class="col-md-4">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <h5 class="card-title text-danger">Rejected</h5>
                    <p class="display-4 text-danger">@Model.Rejected</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 text-center mt-4">
        <!-- Interviewing Applications -->
        <div class="col-md-6">
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <h5 class="card-title text-warning">Interviewing</h5>
                    <p class="display-4 text-warning">@Model.Interviewing</p>
                </div>
            </div>
        </div>

        <!-- Applied Applications -->
        <div class="col-md-6">
            <div class="card shadow-sm border-info">
                <div class="card-body">
                    <h5 class="card-title text-info">Applied</h5>
                    <p class="display-4 text-info">@Model.Applied</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-action="Index" class="btn btn-primary btn-lg">
            <i class="bi bi-list"></i> View All Applications
        </a>
    </div>
</div>
